<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo">

    <ImageButton
        android:id="@+id/imgPersonajes"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="247dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/iconosdos_round" />

    <ImageButton
        android:id="@+id/imgUbicaciones"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="77dp"
        android:layout_marginEnd="241dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgEpisodios"
        app:srcCompat="@mipmap/logos_round" />

    <ImageButton
        android:id="@+id/imgEpisodios"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="244dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgPersonajes"
        app:srcCompat="@mipmap/personaje_foreground" />

    <TextView
        android:id="@+id/txtPer"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="PERSONAJES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgPersonajes"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtEpi"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="48dp"
        android:ems="10"
        android:gravity="center"
        android:text="EPISODIOS"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPer" />

    <TextView
        android:id="@+id/txtLoc"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:gravity="center"
        android:text="LOCATIONS"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imgUbicaciones"
        app:layout_constraintTop_toBottomOf="@+id/txtEpi" />


</androidx.constraintlayout.widget.ConstraintLayout>